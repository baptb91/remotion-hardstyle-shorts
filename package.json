{
  "name": "remotion-hardstyle-shorts",
  "version": "1.0.0",
  "description": "Générateur d'effets visuels hardstyle pour YouTube Shorts",
  "main": "dist/server/api.js",
  "scripts": {
    "start": "remotion studio",
    "build": "tsc && remotion build",
    "render": "remotion render MainComposition out/video.mp4",
    "server": "tsx src/server/api.ts",
    "dev": "concurrently \"npm run server\" \"npm run start\"",
    "preview": "remotion preview",
    "compile": "tsc",
    "postinstall": "npm run compile"
  },
  "dependencies": {
    "@remotion/cli": "^4.0.0",
    "remotion": "^4.0.97",
    "@remotion/bundler": "^4.0.0",
    "@remotion/renderer": "^4.0.0",
    "@remotion/studio": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "tsx": "^4.0.0",
    "sharp": "^0.32.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/multer": "^1.4.7",
    "typescript": "^5.0.0",
    "concurrently": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
